<section class="page-container">
	<div class="page-content">
		<h2>Create Account</h2>
		<form action="/users" method="POST">
			<div class="form-group">
				<input type="text" name="username" placeholder="Preencha o UserName" class="form-control">
			</div>
            <div class="form-group">
				<input type="text" name="email" placeholder="Preencha o Email" class="form-control">
			</div>
            <div class="form-group">
				<input type="tel" name="telephone" placeholder="Preencha o telefone" class="form-control">
			</div>
			<div class="form-group">
				<input type="password" name="password"  placeholder="Preencha a Senha" class="form-control">
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Register</button>
			</div>
		</form>
		<a href="/login">Back to Login</a>
	</div>
</section>